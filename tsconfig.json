{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "dom", "esnext.array"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "files": [
    "./typings/images.d.ts",
    "./typings/chat-view.d.ts",
    "./typings/string-natural-compare.d.ts",
    "./typings/react-visibility-sensor.d.ts",
    "./typings/glipdown.d.ts",
    "./typings/i18next-intervalPlural-postProcessor.d.ts",
    "./typings/load-segment.d.ts",
    "./typings/pubnub.d.ts",
    "./typings/typeHelper.d.ts",
    "./typings/emoji-mart.d.ts"
  ]
}
