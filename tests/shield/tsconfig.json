{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "paths": {
      "@/*": ["../../application/src/*"],
      "shield/*": ["./src/*"],
      "foundation/*": ["../../packages/foundation/src/*"],
      "sdk/*": ["../../packages/sdk/src/*"],
      "jui/*": ["../../packages/jui/src/*"],
      "framework/*": ["../../packages/framework/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*",
    "src/**/*(.spec|.test).ts",
    "src/**/__mocks__/*"
  ]
}
