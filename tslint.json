{
  "extends": [
    "tslint-react",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "demo/**/*",
      "packages/ui-components/**/*",
      "**/*.json"
    ]
  },
  "rules": {
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case",
      "allow-snake-case"
    ],
    "import-name": [
      false
    ],
    "jsx-no-multiline-js": [
      false
    ],
    "max-line-length": [
      true,
      200
    ],
    "function-name": [
      true,
      {
        "private-method-regex": "^_[a-zA-Z0-9]+$",
        "static-method-regex": "^[a-z][\\w\\d]+$"
      }
    ]
  },
  "jsRules": {
    "no-empty": true
  }
}
