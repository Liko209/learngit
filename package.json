{
  "name": "fiji",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.2.0"
  },
  "scripts": {
    "preinstall": "node scripts/check-pm.js",
    "postinstall": "yarn bt && yarn build:packages && yarn bt",
    "start:ui": "cd packages/ui && yarn storybook",
    "start:demo": "cd demo && yarn start",
    "start:app": "cd application && yarn start",
    "clean:build": "rm -rf ./packages/*/build ./packages/*/build-es",
    "clean:all": "lerna clean --yes && rm -rf ./node_modules && yarn clean:build",
    "build:packages": "node ./scripts/build.js",
    "build:demo": "cd demo && yarn build",
    "build:app": "cd application && yarn build",
    "test": "node ./scripts/test.js --env=jsdom",
    "test:staged": "CI=true && yarn test --findRelatedTests",
    "test:cover": "yarn test --coverage",
    "lint": "tslint",
    "publish": "yarn clean:build && yarn build && lerna publish --silent",
    "watch": "node scripts/watch.js",
    "precommit": "lint-staged",
    "commits": "git-cz",
    "commits:all": "git add . && git-cz",
    "commitmsg": "node scripts/validate-commit-msg.js && node scripts/check-npm-pkg.js",
    "bt": "lerna bootstrap --hoist"
  },
  "devDependencies": {
    "@types/enzyme": "*",
    "@types/glob": "*",
    "@types/jest": "*",
    "@types/lodash": "*",
    "@types/node": "*",
    "@types/webpack-env": "*",
    "babel-core": "6.26.3",
    "chalk": "2.4.1",
    "commitizen": "2.10.1",
    "cz-customizable": "git+ssh://git@git.ringcentral.com:Fiji/cz-customizable.git#v0.0.5",
    "dts-generator": "2.1.0",
    "enzyme": "3.4.1",
    "enzyme-adapter-react-16": "1.2.0",
    "fake-indexeddb": "2.0.4",
    "glob": "7.1.2",
    "husky": "0.14.3",
    "jest": "23.5.0",
    "lerna": "3.0.3",
    "lint-staged": "7.2.2",
    "mkdirp": "0.5.1",
    "raf": "3.4.0",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "resolve": "1.8.1",
    "rimraf": "2.6.2",
    "rollup": "0.64.1",
    "rollup-plugin-commonjs": "9.1.5",
    "rollup-plugin-json": "3.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.2.1",
    "rollup-plugin-node-resolve": "3.3.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-tslint": "0.1.34",
    "rollup-plugin-typescript2": "0.16.1",
    "rollup-plugin-uglify": "4.0.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "semver": "5.5.0",
    "shelljs": "0.8.2",
    "string-length": "2.0.0",
    "ts-jest": "23.1.3",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-react": "3.6.0",
    "typescript": "2.9.2"
  },
  "lint-staged": {
    "linters": {
      "*.{ts, tsx, js, jsx}": [
        "tslint",
        "test:staged"
      ]
    },
    "ignore": [
      "demo"
    ]
  }
}
