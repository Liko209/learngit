{
  "name": "fiji",
  "version": "1.0.2",
  "private": true,
  "engines": {
    "node": ">=10.0.0",
    "npm": ">=6.2.0"
  },
  "config": {
    "jira": "./jira.config.json"
  },
  "scripts": {
    "preinstall": "node scripts/check-pm.js",
    "postinstall": "npm run bt",
    "start:ui": "cd packages/jui && npm run storybook",
    "start:app": "cd application && npm run start",
    "clean:build": "rm -rf ./packages/*/build ./packages/*/build-es",
    "clean:all": "lerna clean --yes && rm -rf ./node_modules && npm run clean:build",
    "build:packages": "node ./scripts/build.js",
    "build:app": "cd application && npm run build",
    "build:ui": "cd packages/jui && npm run build-storybook",
    "build:release": "cd application && JUPITER_ENV=production npm run build",
    "test": "node ./scripts/test.js --env=jsdom",
    "test:changed": "npm run test:cover -- --changedSince=develop",
    "test:staged": "npm run test:cover -- --findRelatedTests",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test:dev": "npm run test -- --coverage --watch --bail",
    "lint": "tslint",
    "lint-all": "tslint -p application && tslint -p packages/foundation && tslint -p packages/sdk && tslint -p packages/jui && tslint -p packages/voip",
    "publish": "npm run clean:build && npm run build && lerna publish --silent",
    "watch": "node scripts/watch.js",
    "commits": "git-cz",
    "commits:all": "git add . && git-cz",
    "bt": "lerna bootstrap --hoist --no-ci -- --cache-min 9999999",
    "raise-coverage": "node scripts/raise-coverage",
    "generate": "plop --plopfile scripts/generators/index.js",
    "tsc": "tsc -v && tsc -p application && tsc -p packages/jui && tsc -p packages/sdk && tsc -p packages/voip && tsc -p packages/foundation",
    "webpack": "cd application && npm run webpack"
  },
  "devDependencies": {
    "@types/enzyme": "3.1.14",
    "@types/glob": "7.1.1",
    "@types/jest": "23.3.8",
    "@types/node": "10.12.1",
    "@types/webpack-env": "1.13.6",
    "async": "2.6.1",
    "chalk": "2.4.1",
    "commitizen": "3.0.4",
    "cz-customizable": "git+ssh://git@git.ringcentral.com:Fiji/cz-customizable.git#0.0.7",
    "dts-generator": "2.1.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.8.0",
    "fake-indexeddb": "2.0.4",
    "glob": "7.1.3",
    "husky": "1.1.2",
    "jest": "23.6.0",
    "lerna": "3.4.3",
    "lint-staged": "8.0.2",
    "mkdirp": "0.5.1",
    "plop": "2.1.0",
    "raf": "3.4.0",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "resize-observer-polyfill": "1.5.1",
    "resolve": "1.8.1",
    "rimraf": "2.6.2",
    "rollup": "0.66.6",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-peer-deps-external": "2.2.0",
    "rollup-plugin-tslint": "0.1.35",
    "rollup-plugin-typescript2": "0.17.2",
    "rollup-plugin-uglify": "6.0.0",
    "rollup-plugin-uglify-es": "0.0.1",
    "shelljs": "0.8.2",
    "string-length": "2.0.0",
    "terser": "3.14.1",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.1.4"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run tsc && npm run lint-all && npm run webpack && node ./scripts/check-coverage &&  npm run test:cover",
      "commit-msg": "node scripts/validate-commit-msg.js"
    }
  }
}
