{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "rootDir": "src",
    "target": "es6",
    "experimentalDecorators": true,
    "paths": {
      "@/*": ["src/*"],
      "sdk/*": ["node_modules/sdk/src/*"],
      "foundation/*": ["node_modules/sdk/node_modules/foundation/src/*"],
      "ui-components/*": ["node_modules/ui-components/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules/**/*",
    "src/**/__tests__/**/*.ts",
    "src/**/*(.spec|.test).ts"
  ]
}
