  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      // "preLaunchTask": "Run Storybook",
      "url": "http://localhost:6006",
      "internalConsoleOptions": "openOnSessionStart",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach Chrome",
      "url": "http://localhost:6006*",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "timeout": 2000
    }
  ]
}
