{
  "name": "fiji",
  "version": "1.5.0",
  "private": true,
  "engines": {
    "node": "10.9.0",
    "npm": "6.2.0"
  },
  "config": {
    "jira": "./jira.config.json"
  },
  "scripts": {
    "preinstall": "node scripts/check-pm.js",
    "postinstall": "npm run bt",
    "start:ui": "cd packages/jui && npm run storybook",
    "start:app": "cd application && npm run start",
    "clean:build": "rm -rf ./packages/**/*/build ./packages/**/*/build-es ./application/build",
    "clean:all": "lerna clean --yes && rm -rf ./node_modules && npm run clean:build",
    "build:packages": "node ./scripts/build.js",
    "build:app": "cd application && npm run build",
    "build:ui": "cd packages/jui && npm run build-storybook",
    "build:release": "cd application && JUPITER_ENV=production npm run build",
    "test": "node ./scripts/test.js",
    "rcuiTest": "node ./scripts/dirNotChanged.js rcui || (cd packages/rcui && npm run test)",
    "build:public": "cd application && JUPITER_ENV=public npm run build",
    "test:changed": "npm run test -- --changedSince=`node ./scripts/getSinceBranch.js` && npm run rcuiTest",
    "test:staged": "npm run test:cover -- --findRelatedTests",
    "test:cover": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch",
    "test:dev": "npm run test -- --coverage --watch --bail",
    "update-snapshot": "npm run test snapshot -- --updateSnapshot",
    "lint": "eslint",
    "lint-fix": "eslint --fix",
    "lint-all": "concurrently --kill-others-on-fail -r \"eslint --cache application/src/ --ext=.ts,.tsx\" \"eslint --cache packages/{foundation,framework,sdk,voip}/src/ --ext=.ts\" \"eslint --cache packages/jui/src/ --ext=.ts,.tsx\"",
    "publish": "npm run clean:build && npm run build && lerna publish --silent",
    "watch": "node scripts/watch.js",
    "commits": "git-cz",
    "commits:all": "git add . && git-cz",
    "bt": "lerna bootstrap --hoist --no-ci -- --cache-min 9999999",
    "raise-coverage": "node scripts/raise-coverage",
    "generate": "plop --plopfile scripts/generators/index.js",
    "tsc": "tsc -v && concurrently --kill-others-on-fail -r \"./node_modules/.bin/tsc -p application/tsconfig.dev.json\" \"./node_modules/.bin/tsc -p packages/sdk/tsconfig.dev.json\" \"./node_modules/.bin/tsc -p packages/jui/tsconfig.dev.json\" \"./node_modules/.bin/tsc -p packages/voip/tsconfig.dev.json\" \"./node_modules/.bin/tsc -p packages/foundation/tsconfig.dev.json\"",
    "version": "npx lerna version --no-git-tag-version --exact --yes",
    "webpack": "cd application && npm run webpack",
    "fixed:version": "ts-node fixedVersion.ts",
    "update-icon": "node application/scripts/update-icon.js",
    "postupdate-icon": "npm run test application/src/__tests__/icons.test.ts",
    "make-pseudo": "node ./scripts/make-pseudo.js"
  },
  "devDependencies": {
    "@jest-runner/electron": "2.0.1",
    "@types/enzyme": "3.9.0",
    "@types/glob": "7.1.1",
    "@types/jest": "24.0.11",
    "@types/node": "11.11.3",
    "@types/react": "16.8.12",
    "@types/react-dom": "16.8.3",
    "@types/react-transition-group": "2.0.15",
    "@types/webpack-env": "1.13.6",
    "@typescript-eslint/eslint-plugin": "1.10.2",
    "@typescript-eslint/parser": "1.10.2",
    "async": "2.6.1",
    "babel-eslint": "10.0.2",
    "chalk": "2.4.2",
    "commitizen": "3.0.7",
    "concurrently": "4.1.0",
    "cz-customizable": "git+ssh://git@git.ringcentral.com:Fiji/cz-customizable.git#0.0.7",
    "dts-generator": "2.1.0",
    "electron": "4.1.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.9.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb-typescript": "4.0.0",
    "eslint-config-react-app": "4.0.1",
    "eslint-plugin-flowtype": "3.11.1",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-jest": "22.6.4",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.13.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "fake-indexeddb": "2.0.4",
    "glob": "7.1.3",
    "husky": "1.3.1",
    "jest": "24.3.1",
    "jest-fetch-mock": "2.1.2",
    "lerna": "3.4.3",
    "lint-staged": "8.0.2",
    "mkdirp": "0.5.1",
    "plop": "2.1.0",
    "raf": "3.4.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "resize-observer-polyfill": "1.5.1",
    "resolve": "1.8.1",
    "rimraf": "2.6.2",
    "shelljs": "0.8.2",
    "string-length": "2.0.0",
    "terser": "3.16.1",
    "ts-jest": "23.1.4",
    "ts-node": "7.0.1",
    "typescript": "3.4.2",
    "babel-plugin-macros": "2.5.1",
    "babel-plugin-require-context-hook": "1.0.0",
    "jest-styled-components": "6.3.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "concurrently -r \"npm run tsc && npm run clean:build\" && npm run lint-all &&  npm run test:changed",
      "commit-msg": "node scripts/validate-commit-msg.js",
      "post-merge": "node scripts/update-dependencies.js"
    }
  },
  "dependencies": {
    "firebase": "6.2.3"
  }
}
