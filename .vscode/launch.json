{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "protocol": "inspector",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File",
      "program": "${workspaceFolder}/scripts/test.js",
      "args": ["--no-cache", "${relativeFile}"],
      "env": {
        "LISTENING_TO_UNHANDLED_REJECTION": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Current File (With Coverage)",
      "program": "${workspaceFolder}/scripts/test.js",
      "args": ["--no-cache", "--watch", "--coverage", "${relativeFile}"],
      "env": {
        "LISTENING_TO_UNHANDLED_REJECTION": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "Launch test files with TestCafe",
      "program": "${workspaceRoot}/node_modules/testcafe/bin/testcafe.js",
      "args": ["firefox", "${file}"],
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      // "program": "${workspaceFolder}/scripts/test.js",
      "args": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--no-cache",
        "${relativeFile}",
        "--runInBand",
        "--detectLeaks",
        "--logHeapUsage",
        "--watch"
      ],
      "env": {
        "APP": "<rootDir>/(application|packages/sdk|packages/jui|packages/foundation|packages/voip|packages/framework|tests/shield)"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "port": 9229
    }
  ]
}
